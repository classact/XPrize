<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sound_drill_four"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtoybox1"
    tools:context="classact.com.xprize.activity.drill.sound.SoundDrillFourActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layout1"
        android:layout_height="530dp">

        <ImageView
            android:id="@+id/item1"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:contentDescription="@string/Damas_Toy"
            android:layout_marginStart="80dip"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/item6"
            android:layout_width="200dip"
            android:layout_height="200dp"
            android:contentDescription="@string/Damas_Toy"
            android:layout_marginStart="100dip"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/toybox"
            android:layout_width="531dp"
            android:layout_height="394dp"
            android:layout_marginStart="100dp"
            android:contentDescription="@string/receptacle"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.01"
            android:background="@android:color/transparent" />

        <!-- receptacletoyboxold -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="400dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/item2"
            android:layout_width="250dip"
            android:layout_height="250dip"
            android:contentDescription="@string/Damas_Toy"
            android:layout_marginStart="40dip"
            android:layout_marginTop="100dp"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/item3"
            android:layout_width="250dip"
            android:layout_height="250dip"
            android:contentDescription="@string/Damas_Toy"
            android:layout_marginStart="70dip"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/item4"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:contentDescription="@string/Damas_Toy"
            android:layout_marginStart="80dip"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/item5"
            android:layout_width="200dip"
            android:layout_height="250dip"
            android:contentDescription="@string/Damas_Toy"
            android:layout_marginStart="100dip"
            android:layout_marginTop="100dp"
            android:background="@android:color/transparent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>