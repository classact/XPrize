<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maths_drill_seven_and_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_counting_beads"
    tools:context="classact.com.clever_little_monkey.activity.drill.math.MathsDrillSevenAndOneActivity">

    <!-- Beads START -->

    <android.support.constraint.Guideline
        android:id="@+id/g_h_beads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>

    <android.support.constraint.Guideline
        android:id="@+id/g_v_beads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:id="@+id/beads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/colour_beads"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/g_h_beads"
        app:layout_constraintLeft_toLeftOf="@id/g_v_beads"
        app:layout_constraintRight_toRightOf="@id/g_v_beads"
        app:layout_constraintBottom_toBottomOf="@id/g_h_beads"/>

    <!-- Beads END -->
    <!-- Numbers Guide START -->

    <android.support.constraint.Guideline
        android:id="@+id/g_h_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22"/>

    <android.support.constraint.Guideline
        android:id="@+id/g_v_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <!-- Numbers Guide END -->
    <!-- First Number START -->

    <ImageView
        android:id="@+id/number_01"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="350dp"
        android:contentDescription="@string/first_number"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/g_h_numbers"
        app:layout_constraintRight_toLeftOf="@id/g_v_numbers"/>

    <!-- First Number END -->
    <!-- Second Number START -->

    <ImageView
        android:id="@+id/number_02"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="190dp"
        android:contentDescription="@string/second_number"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/g_h_numbers"
        app:layout_constraintRight_toLeftOf="@id/g_v_numbers"/>

    <!-- Second Number END -->
    <!-- Third Number START -->

    <ImageView
        android:id="@+id/number_03"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="30dp"
        android:contentDescription="@string/third_number"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/g_h_numbers"
        app:layout_constraintRight_toLeftOf="@id/g_v_numbers"/>

    <!-- Third Number END -->
    <!-- Fourth Number START -->

    <ImageView
        android:id="@+id/number_04"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginTop="100dp"
        android:layout_marginStart="40dp"
        android:contentDescription="@string/fourth_number"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/g_h_numbers"
        app:layout_constraintLeft_toRightOf="@id/g_v_numbers"/>

    <!-- Fourth Number END -->
    <!-- Fifth Number START -->

    <ImageView
        android:id="@+id/number_05"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginTop="120dp"
        android:layout_marginStart="185dp"
        android:contentDescription="@string/fifth_number"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/g_h_numbers"
        app:layout_constraintLeft_toRightOf="@id/g_v_numbers"/>

    <!-- Fifth Number END -->
    <!-- Sixth Number START -->

    <ImageView
        android:id="@+id/number_06"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginTop="70dp"
        android:layout_marginStart="340dp"
        android:contentDescription="@string/sixth_number"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/g_h_numbers"
        app:layout_constraintLeft_toRightOf="@id/g_v_numbers"/>

    <!-- Sixth Number END -->

    <!-- START -->
    <!-- First Missing Number START -->

    <android.support.constraint.Guideline
        android:id="@+id/g_h_missing_number_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"/>

    <android.support.constraint.Guideline
        android:id="@+id/g_v_missing_number_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>

    <ImageView
        android:id="@+id/missing_number_01"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:contentDescription="@string/missing_number"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/g_h_missing_number_01"
        app:layout_constraintLeft_toLeftOf="@id/g_v_missing_number_01"
        app:layout_constraintRight_toRightOf="@id/g_v_missing_number_01"
        app:layout_constraintBottom_toBottomOf="@id/g_h_missing_number_01"/>

    <!-- First Missing Number END -->
    <!-- Second Missing Number START -->

    <android.support.constraint.Guideline
        android:id="@+id/g_h_missing_number_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"/>

    <android.support.constraint.Guideline
        android:id="@+id/g_v_missing_number_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:id="@+id/missing_number_02"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:contentDescription="@string/missing_number"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/g_h_missing_number_02"
        app:layout_constraintLeft_toLeftOf="@id/g_v_missing_number_02"
        app:layout_constraintRight_toRightOf="@id/g_v_missing_number_02"
        app:layout_constraintBottom_toBottomOf="@id/g_h_missing_number_02"/>

    <!-- Second Missing Number END -->
    <!-- Third Missing Number START -->

    <android.support.constraint.Guideline
        android:id="@+id/g_h_missing_number_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"/>

    <android.support.constraint.Guideline
        android:id="@+id/g_v_missing_number_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"/>

    <ImageView
        android:id="@+id/missing_number_03"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:contentDescription="@string/missing_number"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/g_h_missing_number_03"
        app:layout_constraintLeft_toLeftOf="@id/g_v_missing_number_03"
        app:layout_constraintRight_toRightOf="@id/g_v_missing_number_03"
        app:layout_constraintBottom_toBottomOf="@id/g_h_missing_number_03"/>

    <!-- Third Missing Number END -->
    <!-- END -->

</android.support.constraint.ConstraintLayout>