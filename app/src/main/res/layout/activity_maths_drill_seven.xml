<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maths_drill_seven"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_maths_patterns"
    tools:context="za.co.xprize.activity.mathdrill.MathsDrillSevenActivity">
    <LinearLayout
        android:id="@+id/itemsContainer"
        android:layout_marginTop="200dip"
        android:layout_marginLeft="50px"
        android:layout_width="940dip"
        android:layout_height="200dip">
        <ImageView
            android:layout_width="800dip"
            android:layout_height="200dip"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_vertical"
            android:id="@+id/pattern"
            android:src="@drawable/square_circle_triangle" />
        <ImageView
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_toRightOf="@id/pattern"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:id="@+id/missing"
            android:src="@drawable/line" />
    </LinearLayout>
    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginTop="90dip"
        android:layout_marginLeft="50dip"
        android:layout_below="@id/itemsContainer"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center_vertical"
        android:id="@+id/filler1"
        android:src="@drawable/red_block" />
    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginTop="90dip"
        android:layout_marginLeft="50dip"
        android:layout_toRightOf="@id/filler1"
        android:layout_below="@id/itemsContainer"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center_vertical"
        android:id="@+id/filler2"
        android:src="@drawable/red_block" />
    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginTop="90dip"
        android:layout_marginLeft="50dip"
        android:layout_toRightOf="@id/filler2"
        android:layout_below="@id/itemsContainer"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center_vertical"
        android:id="@+id/filler3"
        android:src="@drawable/red_block" />
    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginTop="90dip"
        android:layout_marginLeft="50dip"
        android:layout_toRightOf="@id/filler3"
        android:layout_below="@id/itemsContainer"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center_vertical"
        android:id="@+id/filler4"
        android:src="@drawable/red_block" />
    <ImageView
        android:layout_width="100dip"
        android:layout_height="90dip"
        android:layout_marginTop="100dip"
        android:layout_marginLeft="50dip"
        android:layout_toRightOf="@id/filler4"
        android:layout_below="@id/itemsContainer"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center_vertical"
        android:id="@+id/filler5"
        android:src="@drawable/red_block" />
</RelativeLayout>
