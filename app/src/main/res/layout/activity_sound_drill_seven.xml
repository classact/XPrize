<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sound_drill_seven"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_touchpicture2"
    tools:context="classact.com.xprize.activity.drill.sound.SoundDrillSevenActivity">

    <!-- Letters End -->

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/letters_g_h"
        app:layout_constraintGuide_percent="0.25"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/letters_g_v"
        app:layout_constraintGuide_percent="0.5"/>

    <LinearLayout
        android:id="@+id/writing_container"
        android:layout_width="866dp"
        android:layout_height="190dp"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginStart="350dp"
        app:layout_constraintTop_toTopOf="@id/letters_g_h"
        app:layout_constraintLeft_toLeftOf="@id/letters_g_v"
        app:layout_constraintRight_toRightOf="@id/letters_g_v"
        app:layout_constraintBottom_toBottomOf="@id/letters_g_h">

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/letter_1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:visibility="visible"
            android:layout_height="150dp"/>

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/letter_2"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"
            android:layout_height="150dp"/>

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/letter_3"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"
            android:layout_height="150dp"/>

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/letter_4"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"
            android:layout_height="150dp"/>

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/letter_5"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"
            android:layout_height="150dp"/>

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/letter_6"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"
            android:layout_height="150dp"/>

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/letter_7"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"
            android:layout_height="150dp"/>

    </LinearLayout>

    <!-- Letters Start -->
    <!-- Images Start -->

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/images_g_h"
        app:layout_constraintGuide_percent="0.75"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/images_g_v"
        app:layout_constraintGuide_percent="0.5"/>

    <LinearLayout
        android:id="@+id/objects_container"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_weight="2.73"
        android:layout_height="0dip"
        app:layout_constraintTop_toTopOf="@id/images_g_h"
        app:layout_constraintLeft_toLeftOf="@id/images_g_v"
        app:layout_constraintRight_toRightOf="@id/images_g_v"
        app:layout_constraintBottom_toBottomOf="@id/images_g_h">

        <ImageView
            android:layout_marginStart="100dip"
            android:layout_width="300dip"
            android:id="@+id/item1"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:visibility="visible"
            android:layout_height="300dip"
            android:layout_marginTop="100dp"/>

        <ImageView
            android:layout_marginStart="50dip"
            android:layout_width="300dip"
            android:id="@+id/item2"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:contentDescription="@string/app_name"
            android:layout_height="300dip"
            android:layout_marginTop="100dp"/>

        <ImageView
            android:layout_marginStart="50dip"
            android:layout_width="300dip"
            android:id="@+id/item3"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:contentDescription="@string/app_name"
            android:layout_height="300dip"
            android:layout_marginTop="100dp"/>
    </LinearLayout>

    <!-- Images End -->

</android.support.constraint.ConstraintLayout>


