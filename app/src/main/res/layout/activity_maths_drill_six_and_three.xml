<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maths_six_and_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_monkey_wants_to_eat"
    tools:context="za.co.xprize.activity.mathdrill.MathsDrillSixAndThreeActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dip"
        android:id="@+id/monkeyEnclosure"
        android:layout_marginLeft="450dip">
        <ImageView
            android:layout_width="250dip"
            android:layout_height="250dip"
            android:contentDescription="@string/app_name"
            android:id="@+id/monkey"
            android:visibility="invisible"
            android:src="@drawable/blank" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="450dip"
        android:id="@+id/itemsContainer"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:contentDescription="@string/app_name"
            android:id="@+id/item_one"
            android:visibility="invisible"
            android:src="@drawable/cupcake" />
        <ImageView
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:contentDescription="@string/app_name"
            android:id="@+id/item_two"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/item_one"
            android:src="@drawable/cupcake" />
        <ImageView
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:contentDescription="@string/app_name"
            android:id="@+id/item_three"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/item_two"
            android:src="@drawable/cupcake" />
        <ImageView
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:contentDescription="@string/app_name"
            android:id="@+id/item_four"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/item_three"
            android:src="@drawable/cupcake" />
        <ImageView
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:contentDescription="@string/app_name"
            android:id="@+id/item_five"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/item_four"
            android:src="@drawable/cupcake" />
        <ImageView
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:layout_below="@+id/item_one"
            android:visibility="invisible"
            android:contentDescription="@string/app_name"
            android:id="@+id/item_six"
            android:src="@drawable/cupcake" />
        <ImageView
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:layout_toRightOf="@id/item_six"
            android:contentDescription="@string/app_name"
            android:id="@+id/item_seven"
            android:layout_below="@+id/item_two"
            android:visibility="invisible"
            android:src="@drawable/cupcake" />
        <ImageView
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:contentDescription="@string/app_name"
            android:id="@+id/item_eight"
            android:layout_below="@+id/item_three"
            android:visibility="invisible"
            android:layout_toRightOf="@id/item_seven"
            android:src="@drawable/cupcake" />
        <ImageView
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:contentDescription="@string/app_name"
            android:id="@+id/item_nine"
            android:layout_below="@+id/item_four"
            android:visibility="invisible"
            android:layout_toRightOf="@id/item_eight"
            android:src="@drawable/cupcake" />
        <ImageView
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:contentDescription="@string/app_name"
            android:id="@+id/item_ten"
            android:layout_below="@+id/item_five"
            android:visibility="invisible"
            android:layout_toRightOf="@id/item_nine"
            android:src="@drawable/cupcake" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:id="@+id/numbers_container"
        android:layout_marginLeft="940dip"
        android:layout_marginTop="50dip"
        android:layout_width="wrap_content">
        <ImageView
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_vertical"
            android:id="@+id/numeral_1"
            android:src="@drawable/numeral_0" />
        <ImageView
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:contentDescription="@string/app_name"
            android:id="@+id/numeral_2"
            android:src="@drawable/numeral_0"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/numeral_1"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_vertical"
            android:id="@+id/numeral_3"
            android:src="@drawable/numeral_0"
            android:layout_below ="@+id/numeral_2"/>
    </RelativeLayout>
</RelativeLayout>
